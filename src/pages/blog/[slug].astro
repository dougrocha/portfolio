---
import BlogPostLayout from "../../layouts/BlogPostLayout.astro";

export async function getStaticPaths() {
  const blogs = await Astro.glob("../../content/blog/*.mdx");

  return blogs.map((blog) => ({
    params: {
      slug: blog.frontmatter.slug,
    },
    props: {
      blog,
    },
  }));
}

const { Content } = Astro.props.blog;
---

<BlogPostLayout frontmatter={Astro.props.blog.frontmatter}>
  <article class="prose mx-auto max-w-screen-lg">
    <Content />
  </article>
</BlogPostLayout>
