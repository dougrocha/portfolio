---
type Props = {
  title: string
  body: string
  slug: string
}

const { slug, title, body } = Astro.props
---

<li class="flex w-full rounded-lg bg-neutral-800 p-4">
  <a href={slug}>
    <h3 class="font-semibold text-white">
      {title}
      <span>&rarr;</span>
    </h3>
    <p class="text-gray-300">
      {body}
    </p>
  </a>
</li>
